<h1>Welcome to Burgertime!</h1>

<h3>What kind of burger do you want to eat?</h3>

<ul>
  {{#each burgers}}
  	<li>
  	   <p>ID: {{this.id}}</p>
       <p>Burger: {{this.burger}}</p>
  	</li>
  {{/each}}
</ul>

<div>
  <form action="/" method="POST">
  	<textarea type="text" name="burger"></textarea>

  	<button type="submit">Add Burger</button>
  </form>
</div>

<div>
  <form action="/"{{this.id}}?_method=DELETE" method="POST">

    <button type="submit">Delete Burger</button>
  </form>
</div>
